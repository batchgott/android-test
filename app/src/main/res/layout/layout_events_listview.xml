<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bb_bottom_bar_top_shadow"
        >

        <ImageView
            android:id="@+id/eventLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/eventLogo"
            android:layout_toEndOf="@id/eventLogo"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEventName"
            android:layout_marginTop="13dp"
            android:maxLines="2"
            android:lines="2"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:layout_toEndOf="@+id/eventLogo"
            android:layout_toRightOf="@+id/eventLogo"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
             />
        <ImageButton
            android:id="@+id/btn_subscribeEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:src="@drawable/ic_star_empty"
            android:padding="8dp"
            android:background="@null"
            />
    </RelativeLayout>

</LinearLayout>
