<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_participants"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bb_bottom_bar_top_shadow"
        >

        <ImageView
            android:id="@+id/iv_user_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user_picture"
            android:layout_toLeftOf="@+id/btn_deleteUser"
            android:layout_centerVertical="true"
            android:scrollHorizontally="false"
            android:layout_margin="2dp"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_deleteUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:src="@drawable/ic_delete"
            android:padding="8dp"
            android:background="@null"
            />

    </RelativeLayout>

</LinearLayout>