<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_intro_slider">

    <ImageView
        android:id="@+id/pic_groups"
        android:layout_width="wrap_content"
        android:layout_height="404dp"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/picgroups" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/microsoft_yi_baiti"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="Triff neue Leute mit den selben Interessen"
        android:layout_below="@+id/pic_groups"
        />



</RelativeLayout>