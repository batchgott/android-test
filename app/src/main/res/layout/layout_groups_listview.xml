<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/relativelayout_groups_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bb_bottom_bar_top_shadow"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:text="Eventname"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iv_group_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_event_name"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_event_name"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/iv_group_picture"
            android:layout_toRightOf="@+id/iv_group_picture"
            android:textSize="18sp"
            android:text="Test layout"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_group_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_group_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/iv_group_picture"
            android:layout_toLeftOf="@+id/ivCategorie4"
            android:text=""
            android:textSize="14sp" />



            <ImageView
                android:id="@+id/ivCategorie1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/ivCategorie2"
                android:layout_below="@+id/tv_event_name"
                 />

            <ImageView
                android:id="@+id/ivCategorie2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/ivCategorie3"
                android:layout_below="@+id/tv_event_name" />

            <ImageView
                android:id="@+id/ivCategorie3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_event_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp" />

            <ImageView
                android:id="@+id/ivCategorie4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/ivCategorie1"
                android:layout_toLeftOf="@id/ivCategorie5" />

            <ImageView
                android:id="@+id/ivCategorie5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/ivCategorie2"
                android:layout_toLeftOf="@id/ivCategorie6" />

            <ImageView
                android:id="@+id/ivCategorie6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/ivCategorie3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp" />
        </RelativeLayout>


</LinearLayout>